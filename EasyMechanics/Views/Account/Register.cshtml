@model DataContext.EDM.User

@{
    ViewBag.Title = "Regisret";
    Layout = "~/Areas/ControlPanel/Views/Shared/_Layout.cshtml";
}

<h2>Regisret</h2>

<form action="/Account/Register/" method="post">
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">LOgin</label>
        <input id="emailLogin" class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Login" name="Login" />
    </div>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        <input id="emailLogin" class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="UserName" name="Password" />
    </div>
    <div class="form-actions">
        <button type="submit" class="btn green uppercase login-btn">Register</button>
        
        @*<a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>*@
    </div>

</form>