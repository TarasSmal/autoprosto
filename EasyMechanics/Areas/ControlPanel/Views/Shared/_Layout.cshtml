<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title </title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="~/Content/metronic/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/morris/morris.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/fullcalendar/fullcalendar.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/metronic/assets/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/metronic/assets/global/plugins/select2/css/select2.css" rel="stylesheet" type="text/css">
    <link href="~/Content/metronic/assets/global/plugins/jquery-multi-select/css/multi-select.css" media="screen" rel="stylesheet" type="text/css">
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL STYLES -->
    <link href="~/Content/metronic/assets/global/css/components.min.css" rel="stylesheet" id="style_components" type="text/css" />
    <link href="~/Content/metronic/assets/global/css/plugins.min.css" rel="stylesheet" type="text/css" />
    <!-- END THEME GLOBAL STYLES -->
    <!-- BEGIN THEME LAYOUT STYLES -->
    <link href="~/Content/metronic/assets/layouts/layout/css/layout.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic/assets/layouts/layout/css/themes/darkblue.min.css" rel="stylesheet" type="text/css" id="style_color" />
    <link href="~/Content/metronic/assets/layouts/layout/css/custom.min.css" rel="stylesheet" type="text/css" />
    <!-- END THEME LAYOUT STYLES -->
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    @RenderSection("Styles", false)
    <style>
        span.text-danger {
            position: absolute;
            margin-top: -54px;
            right: 0px;
        }
    </style>
    <script src="~/Content/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
</head>
<!-- END HEAD -->
<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">
    <!-- BEGIN HEADER -->
    <div class="page-header navbar navbar-fixed-top">
        <!-- BEGIN HEADER INNER -->
        <div class="page-header-inner ">
            <!-- BEGIN LOGO -->
            <div class="page-logo">
                <div class="menu-toggler sidebar-toggler" id="toggleClick">
                    <span></span>
                </div>
                <a href="#" id="Logo">
                    <img src="~/Content/metronic/assets/pages/img/logo-big.png" class="logo-image" style="max-height: 40px; margin-top: 6px;" />
                </a>
            </div>
            <!-- END LOGO -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span></span>
            </a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN TOP NAVIGATION MENU -->
            <div class="top-menu">
                <ul class="nav navbar-nav pull-right">
                    <!-- BEGIN USER LOGIN DROPDOWN -->
                    <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
                    <li class="dropdown dropdown-user">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                            <img src="~/Content/metronic/no-avatar.jpg" class="img-circle" alt="" />
                            <span class="username username-hide-on-mobile">@DataContext.Authorization.FormsAuthenticationService.User.Name</span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-default">
                            <li>
                                <a href="~/ControlPanel/User/Edit/@DataContext.Authorization.FormsAuthenticationService.User.Id">
                                    <i class="icon-user"></i> Профіль
                                </a>
                            </li>
                            <li class="divider"> </li>
                            <li>
                                <a href="/Account/LogOut">
                                    <i class="icon-key"></i> Вихід
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- END USER LOGIN DROPDOWN -->
                    <!-- BEGIN QUICK SIDEBAR TOGGLER -->
                    <li class="dropdown dropdown-quick-sidebar-toggler">
                        <a href="/Account/LogOut" class="dropdown-toggle">
                            <i class="icon-logout"></i>
                        </a>
                    </li>
                    <!-- END QUICK SIDEBAR TOGGLER -->
                </ul>
            </div>
            <!-- END TOP NAVIGATION MENU -->
        </div>
        <!-- END HEADER INNER -->
    </div>
    <!-- END HEADER -->
    <div class="clearfix"></div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        <div class="page-sidebar-wrapper">
            <!-- BEGIN SIDEBAR -->
            <!-- DOC: Set data-auto-scroll="false" to disable the sidebar from auto scrolling/focusing -->
            <div class="page-sidebar navbar-collapse collapse">
                <!-- BEGIN SIDEBAR MENU -->
                <ul class="page-sidebar-menu  page-header-fixed " data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200">
                    <!-- DOC: To remove the sidebar toggler from the sidebar you just need to completely remove the below "sidebar-toggler-wrapper" LI element -->
                    <li class="sidebar-toggler-wrapper hide">
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                        <div class="sidebar-toggler">
                            <span></span>
                        </div>
                        <!-- END SIDEBAR TOGGLER BUTTON -->
                    </li>

                    <li class="nav-item @Html.IsSelected(controller: "Dashbord")">
                        <a href="javascript:;" class="nav-link nav-toggle">
                            <i class="icon-hone"></i>
                            <span class="title">Панель Керування</span>
                            <span class="arrow"></span>
                        </a>
                        <ul class="sub-menu">
                            <li class="nav-item  @Html.IsSelected(controller: "Dashbord", action:"Index")">
                                <a href="/ControlPanel/Dashbord/" class="nav-link ">
                                    <span class="title">Панель Керування</span>
                                </a>
                            </li>
                            <li class="nav-item  @Html.IsSelected(controller: "Settings", action:"Index")">
                                <a href="/ControlPanel/Settings" class="nav-link ">
                                    <span class="title">Налаштування</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                   

                    <li class="nav-item @Html.IsSelected(controller: "User")">
                        <a href="/ControlPanel/User/" class="nav-link nav-toggle">
                            <i class="icon-users"></i>
                            <span class="title">Користувачі</span>
                        </a>
                    </li>

                    <li class="nav-item @Html.IsSelected(controller: "Dashboard", action: "Index")">
                        <a href="/ControlPanel/Responses/Index" class="nav-link nav-toggle">
                            <i class="icon-users"></i>
                            <span class="title">Відгуки</span>
                            <span class=""></span>
                        </a>
                    </li>
                  
                    <li class="nav-item @Html.IsSelected(controller: "SpecialPages") @Html.IsSelected(controller: "SpecialBlocksItem")  @Html.IsSelected(controller: "SpecialBlockTemplate")">
                        <a href="/ControlPanel/SpecialPages/Index" class="nav-link ">
                            <i class="icon-paper-clip"></i>
                            <span class="title">Сторінки</span>
                        </a>
                    </li>

                    <li class="nav-item @Html.IsSelected(controller: "FileBank", action:"Files") @Html.IsSelected(controller: "FileBank", action:"Photos")">
                        <a href="javascript:;" class="nav-link nav-toggle">
                            <i class="icon-bag"></i>
                            <span class="title">Банк</span>
                            <span class="arrow"></span>
                        </a>
                        <ul class="sub-menu">
                            <li class="nav-item">
                                <a href="/ControlPanel/FileBank/Files" class="nav-link nav-toggle">
                                    <i class="fa fa-file"></i>
                                    <span class="title">Файли</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/ControlPanel/FileBank/Photos" class="nav-link nav-toggle">
                                    <i class="fa fa-picture-o"></i>
                                    <span class="title">Фото</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
                <!-- END SIDEBAR MENU -->
            </div>
            <!-- END SIDEBAR -->
        </div>
        <!-- END SIDEBAR -->
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">

                <!-- BEGIN PAGE HEADER-->
                @*<h1 class="page-title" id="h1PageName">
                        @ViewBag.Title
                    </h1>*@
                <!-- END PAGE HEADER-->
                <!-- BEGIN PAGE CONTENT-->
                <div class="row">
                    <div class="col-md-12">
                        <div id="main_content">
                            @RenderBody()
                        </div>
                        <!-- END MAIN CONTENT -->
                    </div>
                </div>
            </div>
            <!-- END CONTENT BODY -->
        </div>
    </div>
    <!-- BEGIN FOOTER -->
    <div class="page-footer">
        <div class="page-footer-inner">
            <p>
                <a title="Home" href="/">Home</a>| <a href="/Account/Logout">Logout</a>&nbsp;|&nbsp;<a style="text-decoration: none;"> All rights reserved.</a>
            </p>
        </div>
        <div class="scroll-to-top">
            <i class="icon-arrow-up"></i>
        </div>
    </div>
    <!-- END FOOTER -->
    <script src="~/Content/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/highstock/js/highstock.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/jquery-multi-select/js/jquery.multi-select.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/Content/metronic/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/moment.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/morris/morris.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/morris/raphael-min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/counterup/jquery.waypoints.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/counterup/jquery.counterup.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/jquery-time-circles/TimeCircles.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/fullcalendar/fullcalendar.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/bootstrap-tabdrop/js/bootstrap-tabdrop.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- CUSTOM PLUGINS -->
    <script src="~/tinymce/tinymce.min.js"></script>
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src="~/Content/metronic/assets/global/scripts/app.js" type="text/javascript"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN THEME LAYOUT SCRIPTS -->
    <script src="~/Content/metronic/assets/layouts/layout/scripts/layout.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/layouts/layout/scripts/demo.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/layouts/assets/global/scripts/quick-sidebar.min.js" type="text/javascript"></script>

    <script src="~/Content/metronic/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/nouislider/wNumb.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic/assets/global/plugins/nouislider/nouislider.min.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/Content/metronic/assets/global/plugins/moment.min.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src="~/tinymce/plugins/code/plugin.min.js"></script>
    @RenderSection("Scripts", false)
    <script src="~/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: ".wysiwyg",
            theme: "modern",
            plugins: [
                "advlist autolink lists link image charmap print preview hr anchor pagebreak",
                "searchreplace wordcount visualblocks visualchars code fullscreen",
                "insertdatetime media nonbreaking save table contextmenu directionality",
                "emoticons template paste textcolor colorpicker textpattern imagetools"
            ],
            toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
            toolbar2: "print preview media | forecolor backcolor emoticons",
            image_advtab: true,
            templates: [
                { title: 'Test template 1', content: 'Test 1' },
                { title: 'Test template 2', content: 'Test 2' }
            ]
        });

        $(document).ready(function () {
            $('.custom-table').DataTable({
                // Internationalisation. For more info refer to http://datatables.net/manual/i18n
                "language": {
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    },
                    "emptyTable": "Таблиця пуста",
                    "info": "Показано з  _START_ по _END_ із _TOTAL_ елементів",
                    "infoEmpty": "Записи не знайдено",
                    "infoFiltered": "(пошук відбувався по усіх _MAX_ записах)",
                    "lengthMenu": "Показати _MENU_",
                    "search": "Пошук:",
                    "zeroRecords": "Не знайдено жодного запису",
                    "paginate": {
                        "previous": "Попередня",
                        "next": "Наступна",
                        "last": "В кінець",
                        "first": "На початок"
                    }
                }
            });


            $("#toggleClick").click(function () {
                var logo = $("#Logo");

                if (logo.attr("style"))
                    logo.removeAttr("style");
                else
                    logo.hide();
            });


        });
    </script>
</body>
</html>